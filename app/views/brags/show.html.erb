<style type = 'text/css'>
.event-photos-div{
    margin-top:15px;
}
</style>

<div class = 'col-md-3'>
</div>
<div class = 'col-md-6'>
<h1><%= @brag.title %></h1>
<%= link_to "Back to Brags", brags_path %>
<div>
    <%= @brag.subject %>
</div>
<div>
    <%= @brag.body %>
</div>
