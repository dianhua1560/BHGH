
<div class = 'col-md-3'>
    <% if @is_admin %>
    <%= link_to "Add Event", "" %>
    <% end %>
</div>
<div class = 'col-md-6'>
<h1>Events</h1>
<!-- <%= link_to 'New Event', new_event_path %> -->
<ul class = 'list-group'>
    <% @events.each do |event| %>
    <li class = 'list-group-item'>
        <div>
            <%= event.title %>
        </div>
        <div>
            <%= event.description %>
        </div>
        <div>
            <%= event.time %>
        </div>
    </li>
    <% end %>
</ul>
</div>
<div class = 'col-md-3'></div>
