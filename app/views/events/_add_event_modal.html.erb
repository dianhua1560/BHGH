<div class="modal fade" tabindex="-1" role="dialog" id = 'add-event-modal'>
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-body">
        <h1>Add an event</h1>
        Title: <input type = 'text' ng-model = 'newEvent.title' placeholder = 'title' class = 'form-control'>
        Organizer: <input type = 'text' ng-model = 'newEvent.organizer' placeholder= 'organizer' class = 'form-control'>
        Time: <input type = 'text' ng-model = 'newEvent.time' placeholder = 'time' class = 'form-control'>
        Location: <input type = 'text' ng-model = 'newEvent.location' placeholder = 'location' class = 'form-control'>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-click = 'saveEvent()'>Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->